@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = null;
    string color = "";
    string status = "";
}

<!DOCTYPE html>
<html>

<link rel="stylesheet" href="/css/customer-tablelist.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Masa Listesi</a>
                    <span class="breadcrumb-item active">Masa Seçimi Yapınız</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5" style="margin-right:10px">
            @foreach (var item in Model)
            {
                if (item.Status == false)
                {
                    color = "widgettrue";
                    status = "Masa Boş";
                }
                if (item.Status == true)
                {
                    color = "widgetfalse";
                    status = "Masa Dolu";
                }

                <div class="col-md-3 mb-4">
                    <div class="@color">
                        @if (item.Status == true)
                        {
                            <div class="widget-icon">
                                <a href="/Baskets/Index/@item.MenuTableID"><i class="fa-solid fa-cash-register"></i></a>
                            </div>
                        }
                        else
                        {
                            <div class="widget-icon">
                                <a href="/Menu/Index/@item.MenuTableID"> <i class="fas fa-chair"></i></a>
                            </div>
                        }
                        <div class="widget-text">
                            <h3>@item.Name</h3>
                            <p>@status</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

</body>

</html>